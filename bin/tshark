#!/bin/bash

# Usage:
#   ./bin/tshark [interface] [channel] [RC MAC address]

ifconfig "$1" down
iwconfig "$1" mode monitor
ifconfig "$1" up
iwconfig "$1" channel "$2"

tshark \
  -i "$1" \
  -I \
  -Q -P \
  -f "type mgt subtype deauth" \
  -Y "wlan.addr == $3" &

pid=$!
while read line ; do
  :
done
kill -KILL $pid
